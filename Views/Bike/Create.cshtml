@model BikeService.Models.Bike

@{
    ViewData["Title"] = "Add new Bike";
}

<form method="post" asp-action="Create">
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3"> Add Bike</h2>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Brand" class=""></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Brand" class="form-control" />
                        <span asp-validation-for="Brand" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Model" class=""></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Model" class="form-control" />
                        <span asp-validation-for="Model" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Size" class=""></label>
                    </div>
                    <div class="col-8">
                        @*<input asp-for="Size" class="form-control" />*@
                        @Html.EditorFor(model => model.Size, new { htmlAttributes = new { @type = "number", @min = "48", @step = "2", @value = "48" }})
                        <span asp-validation-for="Size" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Description" class=""></label>
                    </div>
                    <div class="col-8">
                        <textarea id="form7" class="md-textarea form-control" rows="3"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Customer" class=""></label>
                    </div>
                    <div class="col-8 dropdown">
                        <select asp-for="Customer"
                                asp-items="@(new SelectList(@ViewBag.ListOfCustomers, "Id", "Name"))">
                        </select>
                        <span asp-validation-for="Customer" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Create Bike" />
                        </div>
                        <div class="col">
                            <a class="btn btn-primary w-100" asp-action="Index">Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4"></div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
