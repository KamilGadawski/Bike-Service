@model IEnumerable<BikeService.Models.Customer>

@{
    ViewData["Title"] = "Category";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Customer List</h2>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-primary" asp-controller="Customer" asp-action="Create">
               <i class="far fa-plus-square"></i> &nbsp; Create New Customer
            </a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Surname</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Add Date</th>
                    <th>Options</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Surname</td>
                        <td>@item.Email</td>
                        <td>@item.TelephoneNumber</td>
                        <td>@item.DateTimeAdd</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a class="btn btn-info mx-1"  asp-route-Id="@item.Id" asp-controller="Customer" asp-action="Edit">
                                   <i class="far fa-edit"></i>
                                </a>
                                <a class="btn btn-danger mx-1" asp-route-Id="@item.Id" asp-controller="Customer" asp-action="Delete">
                                   <i class="far fa-trash-alt"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Customers exist</p>
    }
</div>

